include ./mixins/_index.pug
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Torrigoyd Magic
    +genericHeadLoad
  +pageWrapper
    //- +hero({
    //-   header:'Torrigoyd Magic WIP',
    //-   pageLinks:[
    //-     {href:'./faq.html',text:'FAQ'}
    //-   ],
    //-   anchorLinks:[
    //-     {href:'about',text:'about'}
    //-   ]
    //- })
    form#item-search
      fieldset(disabled).form-group
        label(for='search-term') Search For
        input(type="text" id="search-term" placeholder="Magic Item Name, Cost, or Source" autocomplete="off").form-control
      fieldset(disabled).form-row.gap-5
        .col
          label Rarity
          .row.align-items-center.pseudo-select
            each option in ['Common','Uncommon','Rare','Very Rare','Legendary']
              label(style="margin:0").pseudo-option
                input(type="checkbox" value=option name="rarity")
                span(class=`rarity ${option}`) #{option}
        fieldset
          label(for='attune') Attunement
          select(class="form-control" id="attune")
            option(value="" selected="selected") Any
            option(value="Yes") Yes
            option(value="No") No
      fieldset(disabled).form-group.col
        label Type
        div.row.align-items-center.pseudo-select
          each option in ['Ammunition','Armor','Potions & Oils','Ring','Rod','Scroll','Shield','Spell Gem','Staff','Wand','Weapon','Wondrous Item']
            label(style="margin:0").pseudo-option
              input(type="checkbox" value=option name="type")
              span #{option}

    .results
      .card.row.result-header.gap-5
        h4.col Item
        h4.col-1 Type
        h4.col-1 Cost
        h4.col-2 Rarity
        h4.col-1 Source
        h4.col-1 Attune
        h4.col-2 Compendia
      ul#result-content
  include ./templates/_index.pug
  +genericScripts